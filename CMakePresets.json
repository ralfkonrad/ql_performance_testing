{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "QL_BUILD_BENCHMARK": "OFF",
        "QL_BUILD_EXAMPLES": "OFF",
        "QL_BUILD_TEST_SUITE": "ON",
        "QL_ENABLE_PARALLEL_UNIT_TEST_RUNNER": "OFF"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "verbose": false,
      "hidden": true
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "inherits": "default"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "inherits": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
        "verbosity": "extra",
        "outputOnFailure": true
      }
    },    
    {
      "name": "debug",
      "configurePreset": "debug",
      "inherits": "default"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "inherits": "default"
    }
  ]
}